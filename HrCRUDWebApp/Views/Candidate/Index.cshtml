@model IEnumerable<HrCRUDWebApp.Models.Candidate>

<div class = "container p-3">
	<div class = "row pt-4">
		<div class = "col-6">
			<h2 class = "text-primary">Candidate list</h2>			 
		</div>
		<div class = "col-6 text-right">
			<a asp-controller="Candidate" asp-action="Create" class="btn btn-primary">Add new Candidate</a>
		</div>
	</div>
	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width: 100%">
			<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Full name
					</th>
					<th>
						Birth date
					</th>
					<th>
						Contact number
					</th>
					<th>
						email
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(Candidate c in Model)
				{
					<tr>
						<td width="20%">@c.Id</td>
						<td width="20%">@c.FullName</td>
						<td width="20%">@c.DateOfBirth.ToString("yyyy-MM-dd")</td>
						<td width="20%">@c.ContactNumber</td>
						<td width="20%">@c.Email</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No items created yet</p>
	}
</div>
