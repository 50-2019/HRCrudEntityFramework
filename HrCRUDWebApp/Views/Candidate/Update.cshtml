@model HrCRUDWebApp.Models.Candidate

<form method="post" asp-action="Update">
	<div class="border p-3">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class = "form-group row">
			<h2 class="text-black-50 pl-3">Update candidate</h2>
		</div>
		<div class = "row">
			<div class="col-12">
				<div class = "form-group row">
					<div class="col-3">
						<label asp-for="FullName"></label>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					</div>
					<div class="col-3">
						<label asp-for="DateOfBirth"></label>
					</div>
					<div class="col-3">
						<label asp-for="ContactNumber"></label>
					</div>
					<div class="col-3">
						<label asp-for="Email"></label>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<input asp-for="FullName" class="form-control"/>
					</div>
					<div class="col-3">
						<input asp-for="DateOfBirth" class="form-control"/>
					</div>
					<div class="col-3">
						<input asp-for="ContactNumber" class="form-control"/>
					</div>
					<div class="col-3">
						<input asp-for="Email" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-8 offset-2 row">
						<div class="col">
							<input type="submit" class="btn btn-info w-75" value="Update" />
						</div>
						<div class="col">
							<a asp-action="Index" class="btn btn-danger w-75">Back</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>