@model IEnumerable<HrCRUDWebApp.Models.Skill>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Skill pool</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="Skill" asp-action="Create" class="btn btn-primary">Add new skill</a>
		</div>
	</div>
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width: 100%">
			<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Skill name
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Skill s in Model)
				{
					<tr>
						<td width="50%">@s.Id</td>
						<td width="50%">@s.Name</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No items created yet</p>
	}
</div>
